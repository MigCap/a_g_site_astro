{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/pages": ["src/pages/*"],
      "@/components": ["src/components/*"],
      "@/layouts": ["src/layouts/*"],
      "@/assets": ["src/assets/*"],
      "@/styles": ["src/styles/*"],
      "@/store": ["src/store/*"]
    }
  }
}
