---
import MainHead from "@/layouts/MainHead.astro";
import NavBar from "@/layouts/Nav/Nav.astro";
import Footer from "@/layouts/Footer/Footer.astro";

interface Props {
  title?: string | undefined;
  description?: string | undefined;
  isWorkPage?: boolean;
}

const { url, props } = Astro;
const isHomePage = url.pathname === "/";

const { title, description, isWorkPage = false } = props;
---

<!doctype html>
<html lang="en">
  <head>
    <MainHead title={title} description={description} />
  </head>
  <body>
    <div class={!isWorkPage ? "site-container" : "site-container-work"}>
      <!-- <div class={!isWorkPage ? "site-wrapper" : ""}> -->
      {!isWorkPage && <NavBar />}
      <slot />
      {!isHomePage && <Footer />}
      <!-- </div> -->
    </div>
  </body>
</html>

<style>
  .site-container {
    height: 100%;
    min-height: 100vh;
    padding-top: calc(var(--nav-height) + 1.5rem);
  }
  .site-container-work {
    display: grid;
    min-height: 100dvh;
    grid-template-rows: 1fr auto;
  }
  /* .site-wrapper {
    padding-top: calc(var(--nav-height) + 1.5rem);
  } */

  @media (max-width: 75em) {
    .site-wrapper {
      padding-top: calc(var(--nav-height) + 0.5rem);
    }
  }
</style>
