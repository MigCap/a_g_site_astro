---
import { Image } from "astro:assets";
import { homePagePic } from "@/constants/images";
import Adam_and_Eve from "@/assets/images/Lead/P01692a00xf2006_(Adam_and_Eve).jpg";
import Rights from "@/components/Rights/Rights.astro";
---

<main id="main-home">
  <div class="img-wrapper">
    <Image
      src={Adam_and_Eve}
      alt={homePagePic.alt}
      width={homePagePic.width}
      height={homePagePic.height}
      fetchpriority="high"
      loading="eager"
    />
  </div>
  <div class="rights">
    <Rights />
  </div>
</main>

<style>
  #main-home {
    max-height: calc(100vh - calc(50px + 1.5rem));
  }

  .img-wrapper {
    display: flex;
    flex-direction: row;
    justify-content: center;
    width: 100%;
    height: 80%;
  }

  img {
    object-fit: contain;
    max-width: 80vw;
    max-height: 70vh;
  }

  :global(.rights) {
    text-align: center;
    padding-top: 3rem;
    font-size: 0.6rem;
    p {
      color: var(--grey);
      a:hover {
        transition: var(--transition);
        color: var(--black);
      }
    }
  }

  @media screen and (max-height: 368px) {
    .img-wrapper {
      padding-top: 50px;
    }

    .rights {
      padding: 3rem 2rem 0 2rem;
    }
  }

  @media screen and (max-width: 768px) {
  }
</style>
