---
import Rights from "@/components/Rights/Rights.astro";
import Instagram from "@/components/icons/Instagram.astro";
---

<div class="contact_container">
  <p style={{ color: "#181818", fontWeight: "bold" }}>Studio</p>
  <p class="contact_mail">contact@alejandroguijarro.com</p>
  <a
    class="contact_social_link"
    href="https://www.instagram.com/alejandroguijarrostudio/"
    target="_blank"
    rel="noopener noreferrer"
    aria-label="Go to Alejandro Guijarro Instagram profile"
  >
    <Instagram />
    <p>Instagram</p>
  </a>

  <div class="contact_rights">
      <Rights />
  </div>
</div>

<style>
  .contact_container {
    max-height: calc(100vh - var(--nav-height));
    text-align: center;
    padding-top: 2rem;
    color: var(--gray-300);

    p {
        padding: 0;
    }

    a {
        font-size: 0.2rem;
        color: var(--gray-100);
        padding: 0.5rem 0;
        :hover {
          transition: var(--transition);
          color: ${colors.black};
        }

        svg {
            width: 0.7rem;
            color: var(--gray-100);
            :hover {
              transition: var(--transition);
              color: ${colors.black};
            }
        }
        p {
            color: var(--gray-100);
            font-size: 0.7rem;
            :hover {
              transition: var(--transition);
              color: ${colors.black};
            }
        }
    }
  }

  .contact_social_link {
    padding-bottom: 2%;

 
    :hover {
      transition: var(--transition);
      p {
        color: var(--gray-50);
      }
      svg {
        color: var(--gray-50);
      }
    }

    svg {
      color: var(--gray-300);
    }

    p {
      color: var(--gray-300);
    }
  }

  .contact_rights {
    grid-area: rights;
    grid-column: 1 / span 3;
    grid-row: 2;
    padding-top: 6rem;
    justify-self: center;
    font-size: .8rem;

    p {
      color: var(--gray-300);
      padding: 0 5px;
      a {
        font-size: 0.7rem;
        color: var(--gray-300);
        :hover {
          transition: var(--transition);
          color: var(--gray-50);
        }
      }
    }
  }
</style>
